# ===========================
# Server
# ===========================
PORT=8080
NODE_ENV=development

# Ganti di environment masing-masing
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# ===========================
# Database
# ===========================
# Contoh jika pakai PostgreSQL via Docker (port 5433 di host)
# DATABASE_URL=postgres://postgres:postgres@localhost:5433/ali

# Contoh jika pakai PostgreSQL lokal default (port 5432)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ali

# ===========================
# CORS
# ===========================
# Origin frontend dev (Vite)
CORS_ORIGINS=http://localhost:5173

# ===========================
# Optional: Base URL untuk link publik
# ===========================
APP_BASE_URL=http://localhost:8080
PUBLIC_BASE_URL=http://localhost:8080

# ===========================
# ML Service (Colab / Cloud Run)
# ===========================
ML_ENABLE=true
ML_BASE_URL=http://127.0.0.1:8000
ML_TIMEOUT_MS=5000
ML_API_KEY=
